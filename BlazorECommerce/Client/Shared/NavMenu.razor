@inject ICategoryService categoryservice
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorECommerce</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/featured" Match="NavLinkMatch.All">
                <span class="oi oi-globe" aria-hidden="true"></span> Top Products
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSub1=!expandSub1">
                <span class="oi oi-list" aria-hidden="true"></span> Categories
            </NavLink>
            @if (expandSub1)
            {
                @foreach (var category in categoryservice.Categories)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="@category.Url" >
                            <span class="oi oi-@category.Icon" aria-hidden="true"></span> @category.Name
                        </NavLink>
                    </div>
                }
            }
        </div>
        <div>
            <AuthorizeView>
                <NotAuthorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/register" Match="NavLinkMatch.All">
                            <span class="oi oi-check" aria-hidden="true"></span> Register
                        </NavLink>
                    </div>
                </NotAuthorized>
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/profile" Match="NavLinkMatch.All">
                            <span class="oi oi-person" aria-hidden="true"></span> Profile
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
        <AuthorizeView Roles = "manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" @onclick="()=>expandSub=!expandSub">
                    <span class="oi oi-monitor" aria-hidden="true"></span> Manager
                </NavLink>
                @if (expandSub)
                {
                    <ul class = "nav flex-column">
                        <li class = "nav-item px-3">
                            <NavLink class="nav-link" href="manager/addproduct">
                                <span class="oi oi-plus" aria-hidden="true"></span> Add Product
                                </NavLink>
                        </li>
                        <li class = "nav-item px-3">
                            <NavLink class="nav-link" href="manager/stock">
                                <span class="oi oi-script" aria-hidden="true"></span> Stock
                            </NavLink>
                        </li>
                    </ul>
                }
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSub;
    private bool expandSub1;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        await categoryservice.GetCategories();
    }
}
